#! /bin/bash
# See skript tervitab vastavalt ajale

read -p "Sisesta aja väärtus (täistund 0-23): " tund

if ! [[ "$tund" =~ ^[0-9]+$ ]]; then
  echo "Viga: palun sisesta ainult täisarv (0-23)."
  exit 1
fi

if [ "$tund" -ge 6 ] && [ "$tund" -lt 12 ]; then
  echo "Tere hommikust!"
elif [ "$tund" -ge 12 ] && [ "$tund" -lt 18 ]; then
  echo "Tere päevast!"
elif [ "$tund" -ge 18 ] && [ "$tund" -lt 22 ]; then
  echo "Tere õhtust!"
elif [ "$tund" -ge 22 ] || [ "$tund" -lt 6 ]; then
  echo "Head ööd!"
else
  echo "Viga: kell peab olema vahemikus 0 kuni 23."
fi
