#! /bin/bash

read -p "Sisesta kuu number: " kuu
if ! [[ "$kuu" =~ ^-?[0-9]+$ ]]; then
    echo "Vigane kuu number. Palun sisesta arv vahemikus 1 kuni 12."
    exit 1
fi

if test $kuu -eq 12 -o $kuu -eq 1 -o $kuu -eq 2; then
	echo "Praegu on talv."
elif test $kuu -eq 3 -o $kuu -eq 4 -o $kuu -eq 5; then
    echo "Praegu on kevad"
elif test $kuu -eq 6 -o $kuu -eq 7 -o $kuu -eq 8; then
    echo "Praegu on suvi"
elif test $kuu -eq 9 -o $kuu -eq 10 -o $kuu -eq 11; then
    echo "Praegu on s√ºgis"
else
    echo "Vigane kuu number. Palun sisesta arv vahemikus 1 kuni 12."
fi
