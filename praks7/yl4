#! /bin/bash
# K체sib rea arvu ja siis v채ljastab sellega treppide laadse kujundi

read -p "Sisesta ridade arv: " rida
if ! [[ "$rida" =~ ^-?[0-9]+$ ]]; then
    echo "Sisestatud v채채rtus ei ole arv."
    exit 1
fi

for (( i=1; i<=rida; i++ )); do
    echo -n "$i."
	for (( j=1; j<=i; j++ )); do
		echo -n "*"
	done
	echo ""
done
