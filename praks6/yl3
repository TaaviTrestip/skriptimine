#! /bin/bash
# See skript küsib kasutaja käest kuu numbrit ja ütleb mis kuu see on

read -p "Sisesta kuu number: " kuunumber

case $kuunumber in
   "1") echo "See on jaanuar.";;
   "2") echo "See on veebruar.";;
   "3") echo "See on märts";;
   "4") echo "See on aprill";;
   "5") echo "See on mai";;
   "6") echo "See on juuni";;
   "7") echo "See on juuli";;
   "8") echo "See on august";;
   "9") echo "See on september";;
   "10") echo "See on oktoober";;
   "11") echo "See on november";;
   "12") echo "See on detsember";;
   *) echo "Sa ei sisestanud numbrit või sisestasid suurema numbri kui 12";;
esac
