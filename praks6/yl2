#! /bin/bash
# See skript v천tab kasutajalt suvalise arvu ja arvutab selle arvu numbrite summa

read -p "Sisesta suvaline t채isarv: " arv
if ! [[ "$arv" =~ ^-?[0-9]+$ ]]; then
    echo "Sisestatud v채채rtus ei ole arv."
    exit 1
fi

summa=0
algarv=$arv

while [ $arv -ne 0 ]; do
	number=$(($arv % 10))
	summa=$(($summa + $number))
	arv=$(($arv / 10))
done

echo "Arvu $algarv numbrite summa on $summa"
